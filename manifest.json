{
  "manifest_version": 3,
  "name": "TabGo",
  "description": "Automatically group tabs and manage a whitelist",
  "version": "1.0",
  "permissions": ["tabs", "storage", "tabGroups", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TabGo"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["*://*/*"]
}
